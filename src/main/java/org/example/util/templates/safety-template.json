    {
      "id": "reportableIssues",
      "type": "listCard",
      "access": "write",
      "declinable": true,
      "editable": true,
      "manualAdd": false,
      "allowExternalData": true,
      "data": {
        "listHeaders": ["issueType", "reportedOn", "reportedBy", "reportedTo"]
      },
      "inputs": {
        "issueType": {
          "type": "text",
          "readonly": true
        },
        "reportedBy": {
          "type": "text"
        },
        "reportedOn": {
          "type": "datetime"
        },
        "reportedTo": {
          "type": "text",
          "rules": {
            "rows": 5,
            "maxLength": 1500,
            "required": true
          }
        }
      }
    },
    {
      "id": "safeMedicationAdministration",
      "type": "formCard",
      "access": "write",
      "declinable": true,
      "inputs": {
        "wasTeachingPerformed": {
          "type": "radio",
          "options": [
            "yes",
            "no"
          ]
        },
        "teachingPerformedBy": {
          "type": "checkbox",
          "options": [
            "patient",
            "pcg",
            "family",
            "familyStaff"
          ]
        },
        "name": {
          "type": "text",
          "maxLength": 75
        },
        "relationship": {
          "type": "select",
          "options": [
            "spouse",
            "partner",
            "son",
            "daughter",
            "parent",
            "guardian",
            "brother",
            "sister",
            "aunt",
            "neighbor",
            "other"
          ]
        },
        "teachingPerformedReason": {
          "type": "text",
          "rules": {
            "maxLength": 3000
          }
        }
      },
      "layout": [{
        "rows": [{
          "id": "wasTeachingPerformed"
        },
          {
            "id": "teachingPerformedBy"
          },

          {
            "type": "row",
            "cols": [{
              "rows": [{
                "id": "name"
              }]
            },
              {
                "rows": [{
                  "id": "relationship"
                }]
              }
            ]
          },
          {
            "id": "teachingPerformedReason"
          }
        ]
      }],
      "dependencies": [{
        "id": "wasTeachingPerformed",
        "values": ["no", null],
        "type": "disable",
        "fields": [
          "teachingPerformedBy"
        ]
      },
        {
          "id": "teachingPerformedBy",
          "values": ["pcg", "family"],
          "type": "enable",
          "fields": [
            "teachingPerformedReason",
            "name",
            "relationship"
          ]
        }
      ]
    },
    {
      "id": "notes",
      "type": "listCard",
      "access": "write",
      "data": {
        "listHeaders": ["date", "description"]
      },
      "inputs": {
        "description": {
          "type": "textarea",
          "rules": {
            "rows": 5,
            "maxLength": 1500,
            "required": true
          }
        }
      }
    }
  ]
}