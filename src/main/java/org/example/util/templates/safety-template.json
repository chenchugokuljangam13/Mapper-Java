      "supportOther": true,
      "displayHeaderCount": true,
      "subheaderDescription": "*item must be reported to Hospice Clinical Director/ACD/Team Leader.",
      "rows": [
        "rodentInsectInfestation",
        "gunInHome",
        "signOfAbuseNeglect",
        "fireExitPlans",
        "smokeAlarm",
        "carbonMonoOxideAlarm",
        "obstructedEntranceExits",
        "unSafeMatsObstacles",
        "petsInHome",
        "oxygenIsPresent"
